---
import { Picture } from "astro:assets";

const {src, alt} = Astro.props;
---
<div class="image-container">
    <Picture src={src} alt={alt}>
</div>
<style>
.image-container {
    position: relative;
    width: 100%;
    height: 100%; /* You can set this to a specific height or use viewport units */
    overflow: hidden; /* Hide the overflow to clip the image */
}

/* .image-container img {
    position: absolute;
    top: 50%;
    left: 50%;
    height: 100%;
    width: auto;
    transform: translate(-50%, -50%);
} */

img {
  position: absolute;
  top: -100%;
  right: -100%;
  bottom: -100%;
  left: -100%;
  margin: auto;
}
</style>
