---
import "../styles/global.css";
import "@fontsource/inter/latin-400.css";
import "@fontsource/inter/latin-600.css";
import "@fontsource/lora/400.css";
import "@fontsource/lora/600.css";
import '@fontsource/bungee-inline';

import BubbleChamber from '../components/BubbleChamber.astro';
import Head          from '../components/Head.astro';
import Header        from '../components/Header.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <Head title="The Big Bang Collective"/>
  </head>

  <body>
    <!-- new scroll-aware top bar -->
    <Header/>

    <BubbleChamber/>
    <slot/>

		<div class="footer bg-gray-800 text-white text-center p-4">
			<p class="inline-flex items-center justify-center" style="white-space: pre-wrap;">Made with <span class="material-symbols-outlined text-red-600">favorite</span> by <a href="https://github.com/greatestwx">Julian</a> and <a href="https://www.k-si.com/">Kaj</a></p>
		</div>

    <!-- scroll logic now lives here so it runs on every page -->
    <script type="module">
      import { initScrollHeader } from '../util/scroll-header.js';
      initScrollHeader();
    </script>
  </body>
</html>
