---
import FrontPage  from "../layouts/FrontPage.astro";
import Headline   from "../components/Headline.astro";
import ContactUs  from "../components/ContactUs.astro";
import Timeline   from "../components/Timeline.astro";
import { getEntryBySlug } from "astro:content";

/* get the 2025 markdown entry */
const { data } = await getEntryBySlug('years', '2025');
---

<FrontPage>
  <div class="px-4 sm:px-6 md:px-8 rounded-xl bg-gray-100 text-gray-800 p-2 m-5 pb-10 shadow">
    <Headline>{data.title}</Headline>

      <p class="intro-copy">
        {data.intro}
      </p>
    </div>

  <Timeline festivals={data.festivals} />
</FrontPage>
